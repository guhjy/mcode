citHeader("To cite package 'mcode' in publications use:")
     
 year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
 vers <- paste("R package version", meta$Version)
 
 citEntry(entry="Manual",
		  title = "mcode: Functions to Merge and Recode Across Multiple Variables",
		  author = personList(as.person("Thomas J. Leeper")),
		  year = year,
		  note = vers,
		  textVersion =
		  paste("Thomas J. Leeper (",
				year,
				"). mcode: Functions to Merge and Recode Across Multiple Variables. ",
				vers, ".", sep=""))